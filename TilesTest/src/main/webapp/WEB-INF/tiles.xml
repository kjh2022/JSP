<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
  <definition name="myapp.homepage" template="/WEB-INF/views/layouts/layout.jsp">
    <put-attribute name="title" value="MyWebSite" />
    <put-attribute name="menu" value="/WEB-INF/views/layouts/menu.jsp" />
    <put-attribute name="body" value="" />
    <put-attribute name="footer" value="/WEB-INF/views/layouts/footer.jsp" />
  </definition>
  
  <definition name="WILDCARD:*/*" extends="myapp.homepage">
  	<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"/>
  </definition>
  
  <definition name="myapp.admin" template="/WEB-INF/views/layouts/adminLayout.jsp">
    <put-attribute name="title" value="Admin" />
    <put-attribute name="header" value="/WEB-INF/views/layouts/adminHeader.jsp" />
    <put-attribute name="side" value="/WEB-INF/views/layouts/adminSide.jsp" />
    <put-attribute name="header"></put-attribute>
    <put-attribute name="body" value="" />
    <put-attribute name="footer" value="/WEB-INF/views/layouts/adminFooter.jsp" />
  </definition>
  
  <definition name="WILDCARD:admin*/*" extends="myapp.homepage">
  	<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"/>
  </definition>
</tiles-definitions>